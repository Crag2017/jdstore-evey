<style media="screen">
  .productsshow-evey{

padding-left: 40px;
padding-right: 40px;
width: 100%;
background-color: grey;
background-image: url(https://static.pexels.com/photos/4827/nature-forest-trees-fog.jpeg);
background-size: cover;
background-repeat: repeat-y;


  }
  .pdc-description{
    //background-color: rgba(0, 0, 0, 0.3);
    padding-bottom: 10px;
    padding-left: 20px;
    padding-right: 20px;
      padding-top: 30px;
  }
  .reviewbox{
    background-color: rgba(255, 255, 255, 0.8);
    //box-shadow: 1px 1px 1px grey;
    padding-bottom: 30px;

  }
  .heart-e{
    width: 100px;
    height:200px;
  }
</style>
<div class="productsshow-evey">


  <div class="col-md-6" style="padding-top:30px;">
    <% if @product.image.present? %>


    <div id="zoom_01">
      <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
    </div>


    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>

  <div class="col-md-6 pdc-description">
    <h2> <%= @product.title %> </h2>

    <div style="height:100px;">

      <p>
        <%= @product.description %>
      </p >
      <hr>
    </div>
    <div> 数量 : <%= @product.quantity %> </div>
  </br>
    <div>
    外观 : <%= rating_for @product, 'a', disable_after_rate: true %>
    质地 : <%= rating_for @product, 'b', disable_after_rate: true %>
    性价比 : <%= rating_for @product, 'c', disable_after_rate: true %>
    </div>

    <div class="product-price"> ￥ <%= @product.price %> </div>
    <!--收藏开始-->
        <div class="heart-e" style="margin-top:20px;float:left;margin-right:30px;">
          <% if user_signed_in? %>
           <% if !current_user.is_fan_of?(@product) %>
                    <%= link_to favorite_product_path(@product), :class => "like btn btn-default",method: :post do %>
                    <i class="fa fa-heart" aria-hidden="true">    收藏宝贝</i>
                    <% end %>
                  <% else %>
                    <%= link_to unfavorite_product_path(@product), :class => "like btn btn-default",method: :post do %>
                    <i class="fa fa-heart" aria-hidden="true" style="color:red;"></i>
                   <% end %>
                 <% end %>
                 <% else %>
                    <%= link_to favorite_product_path(@product), :class => "like btn btn-default", method: :post do %>
                      <i class="fa fa-heart-o fa-lg", style="color:red;"></i>
                    <% end %>
                 <% end %>
         </div>
    <!--收藏结束-->

<!--加入购物车开始-->
    <div class="pull-right" style="margin-top:10px;">
      <% if @product.quantity > 0 %>
    <%= link_to("加入购物车", add_to_cart_product_path(@product), :method => :post, :class => "btn btn-primary btn-lg btn-danger") %>
   <% else %>
    已销售一空
   <% end %>

    </div>

<!--加入购物车结束-->

  </div>

  <!--搜索区域开始-->
  <div class="reviewbox row">
    <div class="review">
      <div class="col-sm-10 col-sm-offset-1">
        <h3 class="reviews_title">
          <%= @product.reviews.count %> 评论
        </h3>
        <hr>
        <div id="reivews">
          <%= render @product.reviews%>
          <hr>
          <%= render "reviews/form"%>
        </div>
      </div>
    </div>
  </div>

  <!--搜索区域结束-->
</div>




<script type="text/javascript">
  $('#zoom_01').elevateZoom();
</script>
